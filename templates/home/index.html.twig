{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container my-5">

    <!-- Section Hero -->
    <header class="text-center my-5">
        <h1>Bienvenue sur MonSite</h1>
        <p class="lead">Découvrez nos derniers articles et actualités</p>
        <a href="{{path('app_article')}}" class="btn btn-primary">Voir les articles</a>
    </header>

    <!-- Liste des Articles -->
    <section id="articles" class="mt-5">
        <h2 class="mb-4">Derniers Articles</h2>
        {% if articles|length > 0 %}
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.title|upper }}</h5>
                                <p class="card-text">{{ article.description|slice(0, 100) }}...</p>
                                <a href="{{ path('show_article', { id : article.id }) }}" class="btn btn-primary">Lire plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">Aucun article disponible pour le moment.</div>
        {% endif %}
    </section>
</div>
{% endblock %}
