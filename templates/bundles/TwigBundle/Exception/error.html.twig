{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code }}{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 50px;">
        <h1>Oups ! Une erreur est survenue ({{ status_code }})</h1>
        <p>{{ status_text }}</p>

        {% if status_code == 403 %}
            <p>Vous n'avez pas l'autorisation d'accéder à cette page.</p>
        {% elseif status_code == 500 %}
            <p>Une erreur interne s'est produite. Veuillez réessayer plus tard.</p>
        {% else %}
            <p>Une erreur inattendue est survenue.</p>
        {% endif %}

        <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
    </div>
{% endblock %}
